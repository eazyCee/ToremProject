    package="com.example.torem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Torem">
        <activity android:name=".Activity.TravelPlanActivity">
        </activity>
        <activity
            android:name=".Activity.SpalshScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BaseActivity" />
        <activity android:name=".front.SignUpActivity" />
        <activity android:name=".front.LoginActivity" />
        <activity android:name=".Activity.HomeActivity" />
        <activity

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.explorefragment.Explore"
    android:orientation="vertical"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Explore"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="30sp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/blue_main" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="start exploring new location"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="15sp"
            android:layout_marginEnd="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="23dp"
            android:textColor="@color/grey_dark" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="“The gladdest moment in human life is a departure into unknown lands.”-Sir Richard Burton"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            android:layout_marginEnd="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="23dp"
            android:textColor="@color/grey_dark" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_TravelPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_travel_plan" />

    </LinearLayout>
</ScrollView>